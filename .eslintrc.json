{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": [
        "google",
        "plugin:flowtype/recommended",
        "plugin:react/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "max-len": 0,
        "indent": ["error", 4],
        "flowtype/require-valid-file-annotation": [
            2,
            "always"
        ],
        "react/react-in-jsx-scope": 0,
        "new-cap": 0
    },
    "parser": "babel-eslint",
    "plugins": [
        "flowtype",
        "react"
    ]
}
